<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/lil_basic_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_hade"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名："
                    android:textSize="5dp" />

                <TextView
                    android:id="@+id/txt_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日："
                    android:textSize="5dp" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址："
                    android:textSize="5dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lil_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/lil_basic_info"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_stature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身高："
                android:textSize="8dp" />

            <TextView
                android:id="@+id/txt_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体重："
                android:textSize="8dp" />

            <TextView
                android:id="@+id/txt_bust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胸围："
                android:textSize="8dp" />

            <TextView
                android:id="@+id/txt_waistline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="腰围："
                android:textSize="8dp" />

            <TextView
                android:id="@+id/txt_hip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="臀围："
                android:textSize="8dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>